{
  "manifest_version": 2,
  "name": "TabMan",
  "version": "1.0",

  "description": "Plugin for TabMan to sync tabs across multiple machines.",

  "icons": {
  },

  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "tabman@example.com"
    }
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": [
      "utils.js",
      "background.js"
    ],
    "persistent": true
  }
}
